<Configuration status="WARN" name="JNIScannerConfig">
    <Properties>
        <Property name="logPath">${sys:logPath:-${env:DORIS_HOME}/log/jni.log}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [%t] %c{1.}:%L - %msg%n"/>
        </Console>

        <RollingFile name="File" fileName="${logPath}"
                     filePattern="${logPath}.%i">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [%t] %c{1.}:%L - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Specific loggers for different components -->
        <Logger name="org.apache.doris.trinoconnector" level="INFO" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.apache.doris.jdbc" level="INFO" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.apache.doris.common.classloader" level="INFO" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger catches everything else -->
        <Root level="INFO">
            <AppenderRef ref="File"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
